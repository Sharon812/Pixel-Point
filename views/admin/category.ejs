<%- include("../layouts/admin/header.ejs") %>
<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
<!-- Custom CSS -->
<link rel="stylesheet" href="/css/admin/category.css" />

<div class="admin-dashboard">
  
  <div class="d-flex">
    <!-- Sidebar -->

    <!-- Main Content -->
    <div class="main-content">
      <div class="container-fluid">
        <!-- Page Header -->
        <div
          class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4"
        >
          <div class="mb-3 mb-md-0">
            <h1 class="h3">Category Management</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Category Management
                </li>
              </ol>
            </nav>
          </div>
          <div class="date text-secondary">
            <i class="far fa-calendar-alt me-2"></i>
            <span id="currentDate"></span>
          </div>
        </div>

        <!-- Category Table Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th class="d-none d-md-table-cell">Name</th>
                    <th class="d-none d-md-table-cell">Description</th>
                    <th class="d-none d-md-table-cell">Offers</th>
                    <th class="d-none d-md-table-cell">End Date</th>

                    <th class="d-md-none">Category Info</th>
                    <th>Actions</th>
                    <th>Offers</th>
                  </tr>
                </thead>
                <tbody>
                  <% cat.reverse().forEach((category,index)=> { %>
                  <tr>
                    <td class="d-none d-md-table-cell fw-medium">
                      <%= category.name %>
                    </td>
                    <td class="d-none d-md-table-cell">
                      <%= category.description %>
                    </td>
                    <td class="d-none d-md-table-cell">
                      <%= category.categoryOffer %>%
                    </td>
                    <td class="d-none d-md-table-cell">
                      <%= category.offerEndDate ? new
                      Date(category.offerEndDate).toLocaleDateString("en-GB") :
                      "" %>
                    </td>

                    <td class="d-md-none">
                      <div>
                        <div class="fw-medium"><%= category.name %></div>
                        <div class="text-muted small">
                          <%= category.description %>
                        </div>
                        <div class="text-muted small">
                          <%= category.categoryOffer %>%
                        </div>
                        <div class="text-muted small">
                          <%= category.offerEndDate ? new
                          Date(category.offerEndDate).toLocaleDateString("en-GB")
                          : "" %>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <a
                          href="/admin/editCategory?id=<%= category._id %>"
                          class="btn btn-warning btn-sm flex-grow-1"
                        >
                          <i class="fas fa-edit me-1 d-none d-sm-inline"></i
                          >Edit
                        </a>

                        <button
                          onclick="deleteCategory('<%= category._id %>')"
                          class="btn btn-danger btn-sm flex-grow-1"
                        >
                          <i class="fas fa-trash me-1 d-none d-sm-inline"></i
                          >Delete
                        </button>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <button
                          class="btn btn-info btn-sm flex-grow-1"
                          data-bs-toggle="modal"
                          data-bs-target="#addOfferModal_<%= category._id %>"
                        >
                          <i class="fas fa-plus me-1 d-none d-sm-inline"></i>Add
                        </button>
                        <% if(category.categoryOffer > 0) {%>
                        <button
                          onclick="removeOffer('<%= category._id%>')"
                          class="btn btn-danger btn-sm flex-grow-1"
                        >
                          <i class="fas fa-times me-1 d-none d-sm-inline"></i
                          >Remove
                        </button>
                        <% }else{ %>
                        <button
                          disabled
                          onclick="removeOffer('<%= category._id%>')"
                          class="btn btn-danger btn-sm flex-grow-1"
                        >
                          <i class="fas fa-times me-1 d-none d-sm-inline"></i
                          >Remove
                        </button>
                        <% } %>
                      </div>
                    </td>
                  </tr>

                  <!-- Add Offer Modal for each category -->
                  <div
                    class="modal fade"
                    id="addOfferModal_<%= category._id %>"
                    tabindex="-1"
                    aria-labelledby="addOfferModalLabel_<%= category._id %>"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5
                            class="modal-title"
                            id="addOfferModalLabel_<%= category._id %>"
                          >
                            Add Offer for <%= category.name %>
                          </h5>
                          <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body">
                          <form id="offerForm_<%= category._id %>" novalidate>
                            <div class="mb-3">
                              <label for="percentage_<%= category._id %>" class="form-label">Discount Percentage</label>
                              <div class="input-group">
                                <input type="number" class="form-control" id="percentage_<%= category._id %>" 
                                       name="percentage" min="1" max="100" required>
                                <span class="input-group-text">%</span>
                                <div class="invalid-feedback">
                                  Please enter a percentage between 1 and 100.
                                </div>
                              </div>
                            </div>
                            <div class="mb-3">
                              <label for="endDate_<%= category._id %>" class="form-label">End Date</label>
                              <input type="date" class="form-control" id="endDate_<%= category._id %>" 
                                     name="endDate" required>
                              <div class="invalid-feedback">
                                Please select a future date.
                              </div>
                            </div>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary" onclick="addOffer('<%= category._id %>')">
                            Add Offer
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Add Category Card -->
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-4">Add New Category</h5>
            <form
              method="post"
              onsubmit="return handleFormSubmit(event)"
              class="row g-3"
            >
              <div class="col-12 col-md-6">
                <label for="categoryName" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="categoryName"
                  name="name"
                  required
                  placeholder="Enter category name"
                />
              </div>
              <div class="col-12 col-md-6">
                <label for="categoryDescription" class="form-label"
                  >Description</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="categoryDescription"
                  name="description"
                  required
                  placeholder="Enter category description"
                />
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">
                  <i class="fas fa-plus me-2"></i>Add Category
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- Toastify -->
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<!-- Custom JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/scripts/admin/category.js"></script>

<!-- Add Bootstrap JS and Popper.js before the closing body tag -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>

<%- include('../layouts/admin/footer.ejs') %>
