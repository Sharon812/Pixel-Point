<% include("../layouts/admin/header.ejs") %>
<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Custom CSS -->
<link rel="stylesheet" href="/css/admindash.css" />

<div class="admin-dashboard">
  <!-- Top Navigation Bar -->
  <nav class="navbar fixed-top d-lg-none bg-primary">
    <div class="container-fluid">
      <button class="navbar-toggler border-0" type="button" id="sidebarToggle">
        <i class="fas fa-bars text-white"></i>
      </button>
      <span class="navbar-brand text-white">Pixel-Point</span>
    </div>
  </nav>

  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white mb-0 d-none d-lg-block">Pixel-Point</h2>
        <button
          class="btn-close d-lg-none text-white"
          id="sidebarClose"
        ></button>
      </div>
      <a href="#" class="active"
        ><i class="fas fa-chart-line me-2"></i>Dashboard</a
      >
      <a href="/admin/users"><i class="fas fa-users me-2"></i>Users</a>
      <a href="/admin/category"><i class="fas fa-tags me-2"></i>Categories</a>
      <a href="/admin/brands"><i class="fas fa-building me-2"></i>Brands</a>
      <a href="/admin/addProducts"
        ><i class="fas fa-plus-circle me-2"></i>Add Products</a
      >
      <a href="/admin/products"><i class="fas fa-box me-2"></i>Products</a>
      <a href="/admin/coupons"><i class="fa-solid fa-tag"></i>Coupons</a>
      <a href="/admin/orders"><i class="fa-solid fa-book me-2"></i>Orders</a>
      <a href="#"><i class="fas fa-cog me-2"></i>Settings</a>
      <a href="/admin/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content flex-grow-1">
      <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="h3 text-gray-800">Dashboard Overview</h1>
          <div class="date text-secondary">
            <i class="far fa-calendar-alt me-2"></i>
            <span id="currentDate"></span>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
          <div class="col-xl-3 col-md-6">
            <div class="stat-card card bg-primary text-white h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-uppercase mb-2">Total Users</h6>
                    <h2 class="mb-0"><%= users %></h2>
                  </div>
                  <div class="icon">
                    <i class="fas fa-users"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6">
            <div class="stat-card card bg-success text-white h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-uppercase mb-2">Total Products</h6>
                    <h2 class="mb-0"><%= totalProducts %></h2>
                  </div>
                  <div class="icon">
                    <i class="fas fa-box"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6">
            <div class="stat-card card bg-info text-white h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-uppercase mb-2">Total Items Ordered</h6>
                    <h2 class="mb-0"><%= totalOrders %></h2>
                  </div>
                  <div class="icon">
                    <i class="fas fa-shopping-cart"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6">
            <div class="stat-card card bg-warning text-white h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-uppercase mb-2">Revenue</h6>
                    <h2 class="mb-0">
                      ₹<%= totalRevenue.toLocaleString('en-IN') %>
                    </h2>
                  </div>
                  <div class="icon">
                    <i class="fas fa-rupee-sign"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Charts -->
        <div class="row mb-4">
          <div class="col-xl-8 col-lg-7 mb-4 mb-lg-0">
            <div class="chart-container">
              <div
                class="d-flex justify-content-between align-items-center mb-4"
              >
                <h5 class="mb-0">Orders Overview</h5>
                <!-- Sales Report Download Section -->
                <div class="dropdown">
                  <button
                    class="btn btn-primary dropdown-toggle"
                    type="button"
                    id="salesReportDropdown"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    <i class="fas fa-download me-2"></i>Download Sales Report
                  </button>
                  <ul
                    class="dropdown-menu dropdown-menu-end"
                    aria-labelledby="salesReportDropdown"
                  >
                    <li>
                      <h6 class="dropdown-header">Select Report Type</h6>
                    </li>
                    <li>
                      <div class="px-3 py-2">
                        <div class="btn-group w-100 mb-2">
                          <button
                            class="btn btn-sm btn-outline-primary"
                            onclick="downloadSalesReport('daily', 'pdf')"
                          >
                            <i class="fas fa-file-pdf me-1"></i>PDF
                          </button>
                          <button
                            class="btn btn-sm btn-outline-success"
                            onclick="downloadSalesReport('daily', 'excel')"
                          >
                            <i class="fas fa-file-excel me-1"></i>Excel
                          </button>
                        </div>
                        <small class="text-muted d-block mb-2"
                          >Daily Report</small
                        >
                      </div>
                    </li>
                    <li>
                      <div class="px-3 py-2">
                        <div class="btn-group w-100 mb-2">
                          <button
                            class="btn btn-sm btn-outline-primary"
                            onclick="downloadSalesReport('weekly', 'pdf')"
                          >
                            <i class="fas fa-file-pdf me-1"></i>PDF
                          </button>
                          <button
                            class="btn btn-sm btn-outline-success"
                            onclick="downloadSalesReport('weekly', 'excel')"
                          >
                            <i class="fas fa-file-excel me-1"></i>Excel
                          </button>
                        </div>
                        <small class="text-muted d-block mb-2"
                          >Weekly Report</small
                        >
                      </div>
                    </li>
                    <li>
                      <div class="px-3 py-2">
                        <div class="btn-group w-100 mb-2">
                          <button
                            class="btn btn-sm btn-outline-primary"
                            onclick="downloadSalesReport('yearly', 'pdf')"
                          >
                            <i class="fas fa-file-pdf me-1"></i>PDF
                          </button>
                          <button
                            class="btn btn-sm btn-outline-success"
                            onclick="downloadSalesReport('yearly', 'excel')"
                          >
                            <i class="fas fa-file-excel me-1"></i>Excel
                          </button>
                        </div>
                        <small class="text-muted d-block mb-2"
                          >Yearly Report</small
                        >
                      </div>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                      <div class="px-3 py-2">
                        <label class="form-label small mb-1"
                          >Custom Date Range</label
                        >
                        <input
                          type="date"
                          id="startDate"
                          class="form-control form-control-sm mb-2"
                        />
                        <input
                          type="date"
                          id="endDate"
                          class="form-control form-control-sm mb-2"
                        />
                        <div class="btn-group w-100">
                          <button
                            class="btn btn-sm btn-primary"
                            onclick="downloadCustomReport('pdf')"
                          >
                            <i class="fas fa-file-pdf me-1"></i>PDF
                          </button>
                          <button
                            class="btn btn-sm btn-success"
                            onclick="downloadCustomReport('excel')"
                          >
                            <i class="fas fa-file-excel me-1"></i>Excel
                          </button>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="orders-chart-wrapper">
                <canvas id="ordersChart"></canvas>
              </div>
            </div>
          </div>
          <div class="col-xl-4 col-lg-5">
            <div class="chart-container">
              <h5 class="mb-4">Revenue Distribution</h5>
              <div class="revenue-chart-wrapper">
                <canvas id="revenueChart"></canvas>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Orders -->
        <div class="recent-orders">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="mb-0">Recent Orders</h5>
            <a href="#" class="btn btn-sm btn-primary">View All</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer</th>
                  <th class="d-none d-md-table-cell">Product</th>
                  <th>Amount</th>
                  <th class="d-none d-sm-table-cell">Status</th>
                  <th class="d-none d-lg-table-cell">Date</th>
                </tr>
              </thead>
              <tbody>
                <% if (typeof recentOrders !== 'undefined') { %> <%
                recentOrders.forEach(order => { %>
                <tr>
                  <td>#<%= order.orderId %></td>
                  <td><%= order.customerName %></td>
                  <td class="d-none d-md-table-cell">
                    <%= order.productName %>
                  </td>
                  <td>₹<%= order.amount %></td>
                  <td class="d-none d-sm-table-cell">
                    <span
                      class="status-badge bg-<%= order.status === 'Delivered' ? 'success' : order.status === 'Pending' ? 'warning' : order.status === 'Processing' ? 'info' : 'secondary' %>"
                    >
                      <%= order.status %>
                    </span>
                  </td>
                  <td class="d-none d-lg-table-cell"><%= order.date %></td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="6" class="text-center">No recent orders</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- Custom JS -->
<script src="/js/admindash.js"></script>

<!-- Chart Initialization -->
<script>
  // Orders Chart
  const ordersCtx = document.getElementById('ordersChart').getContext('2d');
  new Chart(ordersCtx, {
    type: 'line',
    data: {
      labels: <%- JSON.stringify(chartData.labels) %>,
      datasets: [{
        label: 'Daily Orders',
        data: <%- JSON.stringify(chartData.orderData) %>,
        borderColor: '#4e73df',
        backgroundColor: 'rgba(78, 115, 223, 0.1)',
        tension: 0.4,
        fill: true,
        pointRadius: 4,
        pointBackgroundColor: '#4e73df',
        pointBorderColor: '#fff',
        pointHoverRadius: 6,
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            stepSize: 1
          }
        }
      }
    }
  });

  // Revenue Chart
  const revenueCtx = document.getElementById('revenueChart').getContext('2d');
  new Chart(revenueCtx, {
    type: 'bar',
    data: {
      labels: <%- JSON.stringify(chartData.labels) %>,
      datasets: [{
        label: 'Daily Revenue',
        data: <%- JSON.stringify(chartData.revenueData) %>,
        backgroundColor: [
          'rgba(78, 115, 223, 0.8)',
          'rgba(28, 200, 138, 0.8)',
          'rgba(54, 185, 204, 0.8)',
          'rgba(246, 194, 62, 0.8)',
          'rgba(231, 74, 59, 0.8)',
          'rgba(133, 135, 150, 0.8)',
          'rgba(105, 111, 214, 0.8)'
        ],
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return '₹' + value.toLocaleString('en-IN');
            }
          }
        }
      }
    }
  });

  // Set current date
  document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-IN', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });

  // Sales Report Functions
  function downloadSalesReport(type, format) {
    const url = `/admin/sales-report/${type}?format=${format}`;
    window.location.href = url;
  }

  function downloadCustomReport(format) {
    const startDate = document.getElementById('startDate').value;
    const endDate = document.getElementById('endDate').value;

    if (!startDate || !endDate) {
      alert('Please select both start and end dates');
      return;
    }

    if (new Date(startDate) > new Date(endDate)) {
      alert('Start date must be before end date');
      return;
    }

    const url = `/admin/sales-report/custom?start=${startDate}&end=${endDate}&format=${format}`;
    window.location.href = url;
  }
</script>

