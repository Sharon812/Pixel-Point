  <!--=============== CHECKOUT ===============-->
  <section class="checkout section--lg">
    <div class="checkout__container container">
      <h2 class="section__title">Checkout</h2>

      <div class="checkout__content">
        <!-- Coupon Section -->
        <div class="checkout__coupon">
          <h3 class="section__title">Have a coupon?</h3>
          <form class="coupon__form">
            <input
              type="text"
              placeholder="Enter your coupon code"
              class="coupon__input"
            />
            <button class="coupon__button">Apply Coupon</button>
          </form>
        </div>
        <!-- Cart Details -->
        <div class="checkout__cart">
          <h3 class="section__title">Cart Items</h3>
          <div class="cart__items">
            <!-- Item 1 -->
            <div class="cart__item">
              <div class="item__image">
                <img src="assets/img/laptop-1.jpg" alt="MacBook Pro M3" />
              </div>
              <div class="item__details">
                <h4 class="item__name">
                  MacBook Pro M3 (2023) | 14-inch Display
                </h4>
                <div class="item__meta">
                  <span class="item__size">Space Gray</span>
                  <span class="item__qty">Qty: 1</span>
                </div>
                <div class="item__price">₹149,999</div>
              </div>
              <button class="remove__item">
                <i class="fi fi-rs-cross-small"></i>
              </button>
            </div>
            <!-- Item 2 -->
            <div class="cart__item">
              <div class="item__image">
                <img src="assets/img/phone-1.jpg" alt="iPhone 15 Pro" />
              </div>
              <div class="item__details">
                <h4 class="item__name">iPhone 15 Pro | 256GB Storage</h4>
                <div class="item__meta">
                  <span class="item__size">Natural Titanium</span>
                  <span class="item__qty">Qty: 1</span>
                </div>
                <div class="item__price">₹89,999</div>
              </div>
              <button class="remove__item">
                <i class="fi fi-rs-cross-small"></i>
              </button>
            </div>
          </div>
          <!-- Price Details -->
          <div class="price__details">
            <h4 class="details__title">Price Details</h4>
            <div class="price__row">
              <span>Price (2 Items)</span>
              <span>₹239,998</span>
            </div>
            <div class="price__row">
              <span>Discount</span>
              <span class="discount">-₹10,000</span>
            </div>
            <div class="price__row">
              <span>Delivery Charges</span>
              <span class="free">Free</span>
            </div>
            <div class="price__row total">
              <span>Total Amount</span>
              <span>₹229,998</span>
            </div>
          </div>
          <div class="save__message">You will save ₹10,000 on this order</div>
        </div>
        <!-- Billing Details -->
        <div class="checkout__billing">
          <div class="billing__header">
            <div class="location__icon">
              <i class="fi fi-rs-marker"></i>
            </div>
            <h3 class="section__title">Delivery Address</h3>
          </div>
          <!-- Saved Address -->
          <div class="saved__address">
            <div class="address__info">
              <div class="address__header">
                <h4 class="customer__name">Sharon</h4>
                <span class="address__type">Home</span>
              </div>
              <p class="address__details">
                Puthiyandi house, Azhikkal, Boatpalam,<br />
                Near Hashmi Vayanashala, Azhikode,<br />
                Kerala - 670009
              </p>
              <p class="contact__number">+91 8848237115</p>
            </div>
            <button class="change__address">CHANGE</button>
          </div>
          <div class="new__address-form" style="display: none">
            <form class="form">
              <div class="form__row">
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="Full Name"
                    class="form__input"
                    value="Sharon"
                  />
                </div>
                <div class="form__group">
                  <input
                    type="tel"
                    placeholder="Phone Number"
                    class="form__input"
                    value="8848237115"
                  />
                </div>
              </div>
              <div class="form__row">
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="House No., Building Name"
                    class="form__input"
                    value="Puthiyandi house"
                  />
                </div>
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="Road, Area, Colony"
                    class="form__input"
                    value="Azhikkal, Boatpalam"
                  />
                </div>
              </div>
              <div class="form__row">
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="Pincode"
                    class="form__input"
                    value="670009"
                  />
                </div>
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="City"
                    class="form__input"
                    value="Azhikode"
                  />
                </div>
              </div>
              <div class="form__row">
                <div class="form__group">
                  <input
                    type="text"
                    placeholder="State"
                    class="form__input"
                    value="Kerala"
                  />
                </div>
                <div class="form__group">
                  <input type="text" placeholder="Landmark (Optional)"
                  class="form__input" value="Near Hashmi Vayanashala" /
                </div>
              </div>
              <div class="address__actions">
                <button type="button" class="cancel__btn">Cancel</button>
                <button type="submit" class="save__btn">
                  Save & Deliver Here
                </button>
              </div>
            </form>
          </div>
        </div>
        <!-- Payment Details -->
        <div class="checkout__payment">
          <h3 class="section__title">Payment Methods</h3>
          <div class="payment__methods">
            <div class="payment__option">
              <input type="radio" name="payment" id="bank" checked />
              <label for="bank">Direct Bank Transfer</label>
            </div>
            <div class="payment__option">
              <input type="radio" name="payment" id="card" />
              <label for="card">Credit/Debit Card</label>
            </div>
            <div class="payment__option">
              <input type="radio" name="payment" id="cod" />
              <label for="cod">Cash on Delivery</label>
            </div>
            <button
              class="coupon__button place-order-btn"
              style="width: 100%; margin-top: 1rem"
            >
              Place Order
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
