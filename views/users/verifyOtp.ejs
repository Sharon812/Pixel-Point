<%- include("../layouts/users/header.ejs") %>
<link rel="stylesheet" href="/css/verifyOtp.css" />
<div class="otp-container text-center">
    <h2>OTP Verification</h2>
    <p>Please enter the OTP sent to your registered mobile number.</p>
    <form action="/verify-otp " id="otp-form" method="post" onsubmit="return validateOTP()">
      <div class="mb-3">
            <input type="text" id="otp-input" name="otp" class="form-control text-center" placeholder="Enter OTP" maxlength="6" required>
        </div>
        <div id="timer" class="mb-3 timer">02:00</div>
        <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
    </form>
    <p class="mt-3">Didn't receive the OTP? <a href="#" id="resend-link">Resend OTP</a></p>
</div>

<!--script -->
<script src="/scripts/verifyOtp.js"></script>

