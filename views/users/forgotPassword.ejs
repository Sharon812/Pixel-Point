<%- include("../layouts/users/header.ejs") %>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
<!-- Custom CSS -->
<link rel="stylesheet" href="/css/users/forgotPassword.css" />

<div class="container py-4 Cont">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg">
        <div class="row g-0">
          <!-- Welcome Image -->
          <div class="col-md-6 d-none d-md-block welcome-side">
            <div
              class="welcome-image h-100 d-flex flex-column justify-content-center align-items-center text-white p-4 text-center"
            >
              <img
                src="https://img.freepik.com/free-vector/forgot-password-concept-illustration_114360-1123.jpg"
                alt="Forgot Password"
                class="img-fluid mb-4"
              />
              <h3>Forgot Your Password?</h3>
              <p>Enter your email address to receive a password reset link.</p>
            </div>
          </div>
          <!-- Email Form -->
          <div class="col-md-6">
            <div class="card-body p-4">
              <h2 class="text-center mb-3 text-primary fw-bold">
                Forgot Password
              </h2>
              <p class="text-center text-muted mb-4">
                Enter your email address to receive a password reset link.
              </p>
              <form
                method="post"
                action="/forgot-password"
                id="forgotPasswordForm"
              >
                <div class="mb-4">
                  <label for="email" class="form-label">Email address</label>
                  <input
                    type="email"
                    class="form-control form-control-lg"
                    id="email"
                    name="email"
                    required
                  />
                  <% if (typeof message !== 'undefined' && message) { %>
                  <div id="messages" class="ejs-alert text-danger">
                    <%= message %>
                  </div>
                  <% } %>
                </div>
                <div class="d-grid mb-3">
                  <button type="submit" class="btn btn-primary btn-lg">
                    Send Reset Link
                  </button>
                </div>
                <div class="text-center">
                  <p class="mb-0">
                    Remembered your password?
                    <a href="/login" class="text-primary text-decoration-none"
                      >Login here</a
                    >
                  </p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Include jQuery before your script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Custom JS -->
<script src="/scripts/users/forgotPassword.js"></script>
<%- include("../layouts/users/footer.ejs") %>
