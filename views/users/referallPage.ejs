              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<!--=============== JAVASCRIPT ===============-->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const copyBtn = document.getElementById('copyBtn');
    const referralCode = document.querySelector('.referral-code');
    const shareBtn = document.querySelector('.share-btn');

    copyBtn.addEventListener('click', function() {
      navigator.clipboard.writeText(referralCode.textContent)
        .then(() => {
          copyBtn.innerHTML = '<i class="fi fi-rs-check"></i> Copied!';
          setTimeout(() => {
            copyBtn.innerHTML = '<i class="fi fi-rs-copy"></i> Copy Code';
          }, 2000);
        })
        .catch(err => {
          console.error('Failed to copy text: ', err);
        });
    });

    shareBtn.addEventListener('click', function() {
      if (navigator.share) {
        navigator.share({
          title: 'Join me on Pixel Point!',
          text: 'Use my referral code PIXEL2024 to get started!',
          url: window.location.origin + '/signup?ref=PIXEL2024'
        })
        .catch(err => {
          console.error('Share failed:', err);
        });
      } else {
        alert('Web Share API not supported in your browser');
      }
    });
  });
</script>

